<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tvBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Mesaj Bırakma Ekranı"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold|italic"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TableRow>
        <TableRow><![CDATA[
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            ]]></TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMesajKanGrubu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kan Grubu          :"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/spinnerMesajKanGrubu"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMesajAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesajınız           :"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/etMesajAciklama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"/>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnMesajGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesaj Bırak"
        android:layout_marginTop="30dp"
        android:textSize="20sp"/>


</LinearLayout>